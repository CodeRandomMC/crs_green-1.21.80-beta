{
  "format_version": "1.21.70",
  "minecraft:block": {
    "description": {
      "identifier": "crs_green:strawberry_crop",
      "menu_category": {
        "category": "none"
      },
      "states": {
        "crs_green:crop_age": {
          "values": { "min": 0, "max": 7 }
        }
      }
    },
    "components": {
      "minecraft:tick": {
        "interval_range": [20, 20],
        "looping": true
      },
      "minecraft:collision_box": false,
      "minecraft:geometry": "geometry.crop",
      "minecraft:light_dampening": 0,

      // What block can sustain this crop (e.g. "minecraft:farmland")
      "minecraft:placement_filter": {
        "conditions": [
          {
            "allowed_faces": ["up"],
            "block_filter": ["minecraft:farmland"]
          }
        ]
      },

      // Break the crop if water flows through it
      "minecraft:liquid_detection": {
        "detection_rules": [
          {
            "liquid_type": "water",
            "on_liquid_touches": "broken"
          }
        ]
      }
    },
    "permutations": [
      {
        "condition": "q.block_state('crs_green:crop_age') <= 7",
        "components": {
          "crs_green:lava_detection": {
            "on_lava_touches": "break"
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') < 7",
        "components": {
          "crs_green:lava_detection": {
            "on_lava_touches": "break"
          },
          // Loot table for when the crop is not fully grown. Vanilla crops only drop seeds when young.
          "minecraft:loot": "loot_tables/blocks/strawberry_crop_young.json",
          // Trigger growth on random ticks and when interacting with bone meal (only active when the block isn't fully grown).
          "crs_green:crop": {
            "max_age": 8,
            "use_random_tick": true,
            "grow_on_tick_chance": 3,
            "fertilize_item": "minecraft:bone_meal"
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') >= 0",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "crs_green:strawberry_crop_0",
              "render_method": "alpha_test_single_sided",
              "ambient_occlusion": false,
              "face_dimming": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 0",
        "components": {
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 1.6, 16]
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 1",
        "components": {
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 3.2, 16]
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') >= 2",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "crs_green:strawberry_crop_1",
              "render_method": "alpha_test_single_sided",
              "ambient_occlusion": false,
              "face_dimming": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 2",
        "components": {
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 4.8, 16]
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 3",
        "components": {
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 6.4, 16]
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') >= 4",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "crs_green:strawberry_crop_2",
              "render_method": "alpha_test_single_sided",
              "ambient_occlusion": false,
              "face_dimming": false
            }
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 4",
        "components": {
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 8, 16]
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 5",
        "components": {
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 9.6, 16]
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 6",
        "components": {
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 11.2, 16]
          }
        }
      },
      {
        "condition": "q.block_state('crs_green:crop_age') == 7",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "crs_green:strawberry_crop_3",
              "render_method": "alpha_test_single_sided",
              "ambient_occlusion": false,
              "face_dimming": false
            }
          },
          "minecraft:selection_box": {
            "origin": [-8, 0, -8],
            "size": [16, 12.8, 16]
          },
          // Drop different loot when fully grown
          "minecraft:loot": "loot_tables/blocks/strawberry_crop_mature.json"
        }
      }
    ]
  }
}
